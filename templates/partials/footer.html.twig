<footer class="footer">
    <div class="container">
        <div class="footer__brand">
            <img src="{{ asset('build/images/logos/logo-horizontal-white.svg') }}" alt="Rix">
            <span>Expertise et outilllage DevOps</span>
        </div>
        <nav class="footer__links">
            <div class="pages">
                <ul>
                    {% for item in site.footer %}
                        <li>
                            <a href="{{ path(item.path) }}">{{ item.label }}</a>
                        </li>
                    {% endfor %}
                </ul>
            </div>
            <div class="services">
                <a href="{{ path('services') }}">Nos services</a>
                <div>
                    {% for col in site.footerServices %}
                        <ul>
                            {% for item in col %}
                                <li>
                                    <a href="{{ path(item.path) }}">{{ item.label }}</a>
                                </li>
                            {% endfor %}
                        </ul>
                    {% endfor %}
                </div>
            </div>
        </nav>
        <div class="footer__legals">
            <span>©{{ 'now'|date('Y') }} - Rix - Tous droits réservés</span>
            -
            <a href="{{ path('legal') }}">Mentions légales</a>
            -
            <a href="{{ path('privacy') }}">Données personnelles</a>
        </div>
    </div>
</footer>
